<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrazione_dottore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.albertovolpe.mobilfarm.GestoreAccountClient.RegistrazioneDottore">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_marginTop="40dp"
                android:id="@+id/titolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dottore"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="@dimen/font_big"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/editText_margin_bottom">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:maxLength="20"
                    android:background="@drawable/field_editable"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="5"
                    android:id="@+id/text_nome"
                    android:hint="Nome"
                    android:inputType="textCapWords"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:layout_marginLeft="5dp"
                    android:maxLength="20"
                    android:background="@drawable/field_editable"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="10"
                    android:id="@+id/text_cognome"
                    android:hint="Cognome"
                    android:inputType="textCapWords"/>

            </LinearLayout>

            <Spinner
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="@dimen/editText_width"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:background="@drawable/field_editable"
                android:id="@+id/spinner_sesso"/>

            <EditText
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="@dimen/editText_width"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:maxLength="50"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:id="@+id/text_indirizzoStudio"
                android:hint="Indirizzo dello Studio"
                android:inputType="textCapWords"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                >

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:textAlignment="center"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:background="@drawable/field_blocked"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="5"
                    android:enabled="false"
                    android:id="@+id/text_prov"
                    android:hint="Prov"
                    android:inputType="textCapWords"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/editText_height"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:background="@drawable/field_editable"
                    android:id="@+id/spinner_citta"
                    android:entries="@array/comuni_dottre_studio"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                >
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="@dimen/editText_height"
                    android:background="@drawable/field_blocked"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="5"
                    android:inputType="phone"
                    android:id="@+id/prefix"
                    android:hint="+39"
                    android:enabled="false"/>

                <EditText
                    android:layout_marginLeft="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:maxLength="10"
                    android:background="@drawable/field_editable"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="10"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:id="@+id/text_cellulare"
                    android:hint="Numero di Telefono"/>

            </LinearLayout>

            <EditText
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="@dimen/editText_width"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:maxLength="8"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:id="@+id/text_numAlbo"
                android:hint="Numero iscrizione Albo"/>

            <Spinner
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="@dimen/editText_width"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:id="@+id/spinner_specializzazione"
                android:hint="Specializzazione"
                android:entries="@array/specializzazioni"
                android:inputType="textCapWords"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:id="@+id/check_legal"
                android:text="dichiaro di aver preso visione della normativa sulla privacy"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/error_message"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingRight="@dimen/button_padding_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:text="Conferma"
                android:onClick="conferma"
                android:id="@+id/button_conferma"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="INDIETRO"
        android:id="@+id/button_element"
        android:textSize="@dimen/font_small"
        android:onClick="backToCredenziali"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>