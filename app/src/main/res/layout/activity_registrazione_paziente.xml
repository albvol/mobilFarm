<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrazione_paziente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.albertovolpe.mobilfarm.GestoreAccountClient.RegistrazionePaziente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_marginTop="40dp"
                android:id="@+id/titolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paziente"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="@dimen/font_big"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/editText_margin_bottom">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:background="@drawable/field_editable"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="5"
                    android:id="@+id/text_nome"
                    android:hint="Nome"
                    android:inputType="textCapWords"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/field_editable"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="10"
                    android:id="@+id/text_cognome"
                    android:hint="Cognome"
                    android:inputType="textCapWords"/>

            </LinearLayout>

            <Spinner
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="100dp"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:background="@drawable/field_editable"
                android:id="@+id/spinner_sesso"/>

            <EditText
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="250dp"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:maxLength="16"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:id="@+id/text_cf"
                android:inputType="textCapCharacters"
                android:hint="Codice Fiscale"/>

            <TextView
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="250dp"
                android:layout_height="@dimen/editText_height"
                android:paddingTop="15dp"
                android:textSize="@dimen/font_medium"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:onClick="showDatePickerDialog"
                android:id="@+id/text_dataNascita"
                android:hint="Data di Nascita"/>

            <Spinner
                android:layout_gravity="center"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:background="@drawable/field_editable"
                android:hint="Luogo di Nascita"
                android:id="@+id/text_luogoNascita"
                android:entries="@array/comuni_paziente_nascita"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="250dp"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                />


            <Spinner
                android:layout_gravity="center"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:background="@drawable/field_editable"
                android:id="@+id/text_citta_residenza"
                android:entries="@array/comuni_paziente_residenza"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="250dp"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                />

            <EditText
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="250dp"
                android:layout_height="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:id="@+id/text_residenza"
                android:hint="Via/Piazza"
                android:inputType="textCapWords"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
>
                <EditText
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="@dimen/editText_height"
                    android:background="@drawable/field_blocked"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="5"
                    android:inputType="phone"
                    android:id="@+id/prefix"
                    android:hint="+39"
                    android:enabled="false"/>

                <EditText
                    android:layout_marginLeft="4dp"
                    android:layout_width="190dp"
                    android:layout_height="@dimen/editText_height"
                    android:paddingLeft="@dimen/editText_padding_left"
                    android:paddingRight="@dimen/editText_padding_right"
                    android:background="@drawable/field_editable"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:ems="10"
                    android:maxLength="10"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:id="@+id/text_cellulare"
                    android:hint="Numero di Telefono"/>

            </LinearLayout>

            <EditText
                android:layout_marginTop="@dimen/editText_margin_top"
                android:layout_marginBottom="@dimen/editText_margin_bottom"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/editText_height"
                android:paddingLeft="@dimen/editText_padding_left"
                android:paddingRight="@dimen/editText_padding_right"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:background="@drawable/field_editable"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:ems="10"
                android:id="@+id/text_dettagliClinici"
                android:hint="Dettagli Clinici"
                android:inputType="textCapSentences"/>


            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:id="@+id/check_legal"
                android:text="dichiaro di aver preso visione della normativa sulla privacy"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/error_message"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingRight="@dimen/button_padding_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:text="Conferma"
                android:onClick="conferma"
                android:id="@+id/button_conferma"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="INDIETRO"
        android:id="@+id/button_element"
        android:textSize="@dimen/font_small"
        android:onClick="backToCredenziali"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
